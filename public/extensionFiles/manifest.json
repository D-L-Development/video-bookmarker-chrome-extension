{
  "name": "Web Video Bookmarker",
  "description": "Create annotations and associate them with certain key points in any embedded video on any website.",
  "version": "0.0.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "/images/extension.icon-16x16.png",
      "32": "/images/extension.icon-32x32.png",
      "48": "/images/extension.icon-48x48.png",
      "128": "/images/extension.icon-128x128.png"
    },
    "default_title": "Web Video Bookmarker"
  },
  "icons": {
    "16": "/images/extension.icon-16x16.png",
    "32": "/images/extension.icon-32x32.png",
    "48": "/images/extension.icon-48x48.png",
    "128": "/images/extension.icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": [
        "content-script.css"
      ],
      "js": [
        "contentScript.js"
      ]
    },
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "videoManager.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "commands": {
    "ADD_BOOKMARK": {
      "suggested_key": {
        "default": "Alt+B",
        "mac": "Alt+B"
      },
      "description": "Create new bookmark"
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+O",
        "mac": "Alt+O",
        "chromeos": "Alt+O",
        "linux": "Alt+O"
      }
    }
  }
}
